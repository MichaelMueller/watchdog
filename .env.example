# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///watchdog.db

# OAuth2 Configuration (Microsoft Office 365)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_DISCOVERY_URL=https://login.microsoftonline.com/common/v2.0/.well-known/openid_configuration

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@domain.com

# Monitoring Configuration
DEFAULT_CHECK_INTERVAL=300  # seconds (5 minutes)